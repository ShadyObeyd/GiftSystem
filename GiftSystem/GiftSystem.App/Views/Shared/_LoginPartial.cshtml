<ul class="navbar-nav">
    @if (this.User.Identity.IsAuthenticated)
    {
        @if (this.User.IsInRole("User"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark">Hello @User.Identity.Name</a>
            </li>
        }
        <li class="nav-item">
            <form class="form-inline" asp-controller="Users" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Login</a>
        </li>
    }
</ul>